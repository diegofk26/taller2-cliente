<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.example.sebastian.tindertp.MatchingActivity"
    android:id="@+id/matchFragment"
    tools:showIn="@layout/activity_matching">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"

            android:text="" />

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:onClick="goToFullScreen"
            android:clickable="false"
            android:focusable="false" />

    </LinearLayout>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/dislikeButton"
        android:src="@drawable/dislike_button"
        android:onClick="sendDislike"
        android:background="@drawable/placeholder_like"
        android:layout_marginRight="0dp"
        android:layout_marginEnd="0dp"

        android:scaleType="fitStart"
        android:layout_gravity="start|bottom" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/likeButton"
        android:src="@drawable/like_button"
        android:onClick="sendLike"
        android:background="@drawable/placeholder_like"
        android:layout_marginRight="1dp"
        android:layout_marginEnd="1dp"

        android:scaleType="fitEnd"
        android:layout_gravity="end|bottom" />

    <ImageView
        android:layout_width="87dp"
        android:layout_height="81dp"
        android:id="@+id/infoButton"
        android:src="@drawable/info_button"
        android:background="@drawable/placeholder_like"
        android:layout_marginRight="0dp"
        android:layout_marginEnd="0dp"

        android:onClick="goToProfile"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal|bottom" />

</FrameLayout>



