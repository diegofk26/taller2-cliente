<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.example.sebastian.tindertp.MatchingActivity"
    tools:showIn="@layout/activity_matching">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"
            android:text="" />

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:background="@drawable/placeholder_grey"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:clickable="false"
            android:focusable="false" />

    </LinearLayout>

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/dislikeButton"
        android:src="@drawable/dislike_button"
        android:background="@drawable/placeholder_like"
        android:layout_marginRight="300dp"
        android:layout_marginEnd="300dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_gravity="start|bottom" />

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/likeButton"
        android:src="@drawable/like_button"
        android:background="@drawable/placeholder_like"
        android:layout_marginRight="1dp"
        android:layout_marginEnd="1dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_gravity="end|bottom" />

    <ImageButton
        android:layout_width="87dp"
        android:layout_height="81dp"
        android:id="@+id/infoButton"
        android:src="@drawable/info_button"
        android:background="@drawable/placeholder_like"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:onClick="goToProfile"
        android:layout_gravity="center|bottom" />

</FrameLayout>



